import java.util.Scanner;

public class MyPractice {
       
    public static Scanner scan=new Scanner(System.in);
    public static void main(String[] args) {
 
      int n=scan.nextInt();
      
      String even="I love ";
      String odd="I hate ";
      String ans="";
      
      for(int i=1;i<=n;i++){
        
         ans+=(i%2==0?even:odd);
         ans+=(i==n?"it ":"that ");
      }
        System.out.println(ans);
}}
