import java.util.Scanner;

public class Codeforces {
    
    public static Scanner scan = new Scanner(System.in);
   
    public static void main(String[] args) {
     
       int t=scan.nextInt();
        while(t-->0){ 
        int n=scan.nextInt();
        long m=scan.nextLong();
        System.out.println(n==1?0:n==2? m:m*2);
        }
    }}
