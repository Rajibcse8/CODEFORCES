import java.util.Arrays;
import java.util.Scanner;

public class Codeforces {
 
    public static Scanner scan = new Scanner(System.in);
    public static void main(String[] args) {
            
        int t=scan.nextInt();
       while(t-->0){
       
     int arr[]=new int [3];
     arr[0]=scan.nextInt();
     arr[1]=scan.nextInt();
     arr[2]=scan.nextInt();
     int n=scan.nextInt();
     Arrays.sort(arr);
     
       int sum=(arr[2]-arr[1])+ (arr[2]-arr[0]);
       int rem=n-sum;
           System.out.println(rem==0 ||(rem>0 &&rem%3==0) ?"YES":"NO" );
       
       }
    }}
