import java.util.Scanner;

public class Codeforces {
 
    public static Scanner scan = new Scanner(System.in);
    public static void main(String[] args) {
       int t=scan.nextInt();
       while(t-->0){
           int n=scan.nextInt();
           int m=scan.nextInt();
           System.out.println(   (int) Math.ceil((double)(n*m)/2)  );
       }
    }}
