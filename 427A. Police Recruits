import java.util.Scanner;

public class Codeforces {
    
    public static Scanner scan = new Scanner(System.in);
    public static void main(String[] args) {
     
        int n=scan.nextInt();
        int [] arr=new int[n];
        int p=0;
        int count=0;
        for(int i=0;i<n;i++){
            arr[i]=scan.nextInt();
            if(arr[i]==-1){
            
                  if(p==0)count++;
                  else p--; 
            }
            else p+=arr[i];
        }
        System.out.println(count);
    }}
